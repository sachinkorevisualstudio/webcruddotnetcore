@model IEnumerable<webcruddotnetcore.Models.Employee>

<h2>Employee List</h2>
<a asp-action="Create">Create New Employee</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Salary</td>
                <td>@emp.Dob?.ToString("dd-MM-yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
